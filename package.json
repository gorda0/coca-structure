{
  "name": "@coca/structure",
  "version": "1.0.0",
  "description": "Robust boilerplate for working with nodeffi and Rust. +Babel, Docker, Flow, eslint",
  "main": "dist/bundle.js",
  "scripts": {
    "preinstall": "sh scripts/preinstall.sh",
    "watcher": "watchexec --version || cargo install watchexec",
    "build": "cd native  && cargo build --release && cd .. && babel src -d dist/build && rollup -c",
    "start:dev": "npm run watcher && watchexec -w native --restart 'cd native && clear && cargo build --release && npm run watch:js'",
    "watch:js": "watchexec -w src --restart 'flow && babel-node src/mod.js'",
    "start": "npm run build && babel-node dist/bundle.js"
  },
  "keywords": [],
  "author": "Douglas Rodrigues Guimar√£es <douglasrodriguesguima@gmail.com>",
  "license": "GPLv3",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-flow": "^7.9.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "flow": "^0.2.3",
    "flow-bin": "^0.126.1",
    "prettier": "^2.0.5",
    "rollup": "^2.13.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-uglify": "^6.0.4"
  },
  "dependencies": {
    "ffi": "^2.3.0"
  }
}
